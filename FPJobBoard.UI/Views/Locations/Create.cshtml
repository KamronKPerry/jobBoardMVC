@model FPJobBoard.DATA.Location

@{
    ViewBag.Title = "Create A New Location";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="bg-faded bootstrapFlexSux">
        <div class="bg-faded bootstrapFlexSux m-3 p-2">
            <h2 class="m-2"><strong>@ViewBag.Title</strong></h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.EditorFor(model => model.StoreNumber, new { htmlAttributes = new { @class = "form-control", @placeholder= "Store Number"} })
                @Html.ValidationMessageFor(model => model.StoreNumber, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control",@placeholder ="City" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control",@placeholder="State" } })
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.ManagerID, "Manager", htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.DropDownList("ManagerID", null, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.ManagerID, "", new { @class = "text-danger" })
            </div>

            <div class="m-2">
                <input type="submit" value="Create" class="btn btn-success round-edges" />
                @Html.ActionLink("Cancel", "Index", "Locations", null, new { @class = "btn btn-danger round-edges" })
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
