@model IEnumerable<FPJobBoard.DATA.Location>

@{
    ViewBag.Title = "Stores";
}
<div class="bg-faded bootstrapFlexSux tidyEdges">
    <h2 class="mt-3"><strong>@ViewBag.Title</strong></h2>
    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <table class="table bootstrapFlexSux bg-faded">
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.StoreNumber)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                Manager
                @*@Html.DisplayNameFor(model => model.AspNetUser.FirstName)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreNumber)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.FullName)
                </td>@if (User.IsInRole("Admin"))
                {
                    <td>



                        @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LocationID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.LocationID })
                    </td>}
            </tr>
        }

    </table>
</div>
