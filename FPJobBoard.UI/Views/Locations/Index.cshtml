@model IEnumerable<FPJobBoard.DATA.Location>

@{
    ViewBag.Title = "Stores";
}
<div class="bg-faded bootstrapFlexSux tidyEdges m-3">
    <div class="bootstrapFlexSux bg-faded m-3 tidyEdges">
        <h2 class="mt-3"><strong>@ViewBag.Title</strong></h2>
        @if (User.IsInRole("Admin"))
        {
            <p>
                @Html.ActionLink("Create New Location", "Create",null, new { @class="btn btn-success round-edges"})
            </p>
        }
        <table class="table p-3">
            <tr>
                @if (User.IsInRole("Admin"))
            {
                    <th>
                        @Html.DisplayNameFor(model => model.StoreNumber)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    Manager
                    @*@Html.DisplayNameFor(model => model.AspNetUser.FirstName)*@
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="bg-faded tidyEdges">
                    @if (User.IsInRole("Admin"))
                {
                        <td>
                            @Html.DisplayFor(modelItem => item.StoreNumber)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.FullName)
                    </td>@if (User.IsInRole("Admin"))
                {
                        <td class="buttons-box">
                            @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }, new { @class = "btn btn-warning round-edges mr-2" })
                            @Html.ActionLink("Details", "Details", new { id = item.LocationID }, new { @class = "btn btn-primary round-edges mr-2 ml-2" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { @class = "btn btn-danger round-edges ml-2" })
                        </td>}
                </tr>
            }

        </table>
    </div>
</div>
