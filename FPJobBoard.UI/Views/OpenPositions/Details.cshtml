@model FPJobBoard.DATA.OpenPosition

@{
    ViewBag.Title = Model.PositionName;
}


<div class="bootstrapFlexSux bg-faded">
    <h4 class="mt-3">@ViewBag.Title</h4>
    <dl class="dl-horizontal bootstrapFlexSux bg-faded p-3">
        <dt>
            @Html.DisplayNameFor(model => model.IsOpen)
        </dt>


        @if (Model.IsOpen)
            {
            <dd class="text-success">
                Accepting Applications
            </dd>
        }
        else
        {
            <dd class="text-danger">
                Closed
            </dd>
        }


        <dt>
            @Html.DisplayNameFor(model => model.Location.StoreNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location.StoreNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position.JobDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position.JobDescription)
        </dd>
            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {
                if (Model.IsOpen)
                {
                    @Html.ActionLink("Close", "Toggle", new { id = Model.OpenPositionID }, new { @class = "btn btn-warning round-edges mb-2" })
                }
                else
                {
                    @Html.ActionLink("Open", "Toggle", new { id = Model.OpenPositionID }, new { @class = "btn btn-warning round-edges mb-2" })
                }

            }
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary round-edges mt-2" })
    </dl>
</div>
