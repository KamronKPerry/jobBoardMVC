@model FPJobBoard.DATA.Position

@{
    ViewBag.Title = "Edit Employment Position";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg-faded bootstrapFlexSux">
        <div class="bg-faded bootstrapFlexSux m-3 p-2">
            <h2 class="mt-3"><strong>@ViewBag.Title</strong></h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PositionID)

            <div class="form-group  bootstrapFlexSux mt-1">
                <strong>
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                </strong>                <div>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group bootstrapFlexSux mt-1">
                <strong>
                    @Html.LabelFor(model => model.JobDescription, htmlAttributes: new { @class = "control-label" })
                </strong>
                @Html.TextAreaFor(model => model.JobDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JobDescription, "", new { @class = "text-danger" })
            </div>

            <div class="buttons-box mb-2">
                <input type="submit" value="Save" class="btn btn-primary mr-4 round-edges" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger round-edges ml-4" })
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
