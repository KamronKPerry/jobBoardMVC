<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">
    @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/css")
</head>
<body>
    <div class="tagline-upper text-center text-heading text-shadow text-white mt-5 d-none d-lg-block">Business Casual</div>
    <div class="tagline-lower text-center text-expanded text-shadow text-uppercase text-white mb-5 d-none d-lg-block">3481 Melrose Place | Beverly Hills, CA 90210 | 123.456.7890</div>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-faded py-lg-4">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item active px-lg-4">
                        @Html.ActionLink("Home","Index","Home",null, new { @class = "nav-link text-uppercase text-expanded" })
                        @*<a class="nav-link text-uppercase text-expanded" href="@Url.Action("Index","Home")">
                            Home*@
                            <span class="sr-only">(current)</span>
                        @*</a>*@
                    </li>
                    <li class="nav-item px-lg-4">
                        @Html.ActionLink("About","About","Home",null, new { @class = "nav-link text-uppercase text-expanded" })
                        @*<a class="nav-link text-uppercase text-expanded" href="@Url.Action("About","Home")">About</a>*@
                    </li>
                    @*<li class="nav-item px-lg-4">
                        @Html.ActionLink("Blog","Blog","Home",null, new { @class = "nav-link text-uppercase text-expanded" })
                        <a class="nav-link text-uppercase text-expanded" href="blog.html">Blog</a>
                    </li>*@
                    <li class="nav-item px-lg-4">
                        @Html.ActionLink("Contact","Contact","Home",null, new { @class = "nav-link text-uppercase text-expanded" })
                        @*<a class="nav-link text-uppercase text-expanded" href="@Url.Action("Contact","Home")">Contact</a>*@
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item px-lg-4">@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin",null, new { @class= "nav-link text-uppercase text-expanded"})</li>
                        <li class="nav-item px-lg-4">@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin",null, new { @class = "nav-link text-uppercase text-expanded" })</li>

                    }
                    <li class="nav-item px-lg-4">
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
        <footer class="bg-faded text-center py-5">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - KPerry</p>
            </div>
        </footer>
    


        @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/popper.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
