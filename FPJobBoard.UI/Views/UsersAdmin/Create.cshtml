@model FPJobBoard.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Create A New User";
}


<div class="bootstrapFlexSux bg-faded">
    @using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="bg-faded bootstrapFlexSux m-3 p-3">
            @Html.AntiForgeryToken()
            <h2><strong>@ViewBag.Title</strong></h2>
            @Html.ValidationSummary("", new { @class = "text-error" })
            <div class="form-group">
                <strong>
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                </strong>                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <strong>
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                </strong>                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <strong>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                </strong>                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label>
                    <strong>
                        Select User Role
                    </strong>                </label>
                <div>
                    @foreach (var item in (SelectList)ViewBag.RoleId)
                {
                        <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline ml-1" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    }
                </div>
            </div>
            <div class="buttons-box">
                <input type="submit" class="btn btn-success round-edges mr-2" value="Create" />
                @Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-warning round-edges ml-2"})
            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
