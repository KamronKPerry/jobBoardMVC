@model FPJobBoard.UI.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="bootstrapFlexSux bg-faded">
        <div class="bootstrapFlexSux bg-faded p-3 m-3">
            <h2><strong>@ViewBag.Title</strong></h2>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
            <div class="form-group">
                @Html.Label("Roles:", new { @class = "control-label mr-2" })
                
                    @foreach (var item in Model.RolesList)
                {
                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline ml-2" />
                        @Html.Label(item.Value, new { @class = "control-label" })
                    }        
            </div>
                <div class="buttons-box">
                    <input type="submit" value="Save" class="btn btn-success round-edges mr-2" />
                    @Html.ActionLink("Cancel", "Index",null, new { @class="btn btn-warning round-edges ml-2"})
            </div>
        </div>
    </div>
}

<div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
