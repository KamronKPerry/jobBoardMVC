@model IEnumerable<FPJobBoard.UI.Models.ApplicationUser>

@{
    ViewBag.Title = "Application Users";
}

<div class="bootstrapFlexSux bg-faded p-3 m-3 tidyEdges">
    <h2><strong>@ViewBag.Title</strong></h2>


    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success round-edges mb-3" })

    <table class="table bg-faded tidyEdges">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)/@Html.DisplayNameFor(model=>model.Email)
            </th>
            <th>
                Name
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="bg-faded">
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) 

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class="btn btn-warning round-edges mr-2"})
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary round-edges mr-2 ml-2" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger round-edges ml-2" })
                </td>
            </tr>
        }

    </table>
</div>